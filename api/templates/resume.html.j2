<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <style>
    body { font-family: DejaVu Sans, sans-serif; font-size: 12px; color: #111; }
    h1 { font-size: 20px; margin: 0 0 4px 0; }
    h2 { font-size: 14px; margin: 14px 0 6px 0; border-bottom: 1px solid #ddd; padding-bottom: 3px; }
    .meta { color: #555; font-size: 11px; }
    ul { margin: 4px 0 0 18px; }
    li { margin: 2px 0; }
  </style>
  </head>
  <body>
    <h1>{{ basics.name or "Your Name" }}</h1>
    <div class="meta">
      {% set parts = [] %}
      {% if basics.email %}{% set _ = parts.append(basics.email) %}{% endif %}
      {% if basics.phone %}{% set _ = parts.append(basics.phone) %}{% endif %}
      {% if basics.location %}{% set _ = parts.append(basics.location) %}{% endif %}
      {{ parts|join(" • ") }}
    </div>

    {% if work and work|length %}
    <h2>Experience</h2>
    {% for w in work %}
      <div><strong>{{ w.position or "" }}</strong>{% if w.company %} — {{ w.company }}{% endif %}
        {% if w.start or w.end %} ({{ w.start }}{% if w.end %} – {{ w.end }}{% else %} – Present{% endif %}){% endif %}
      </div>
      {% if w.highlights and w.highlights|length %}
        <ul>
          {% for h in w.highlights %}<li>{{ h }}</li>{% endfor %}
        </ul>
      {% endif %}
    {% endfor %}
    {% endif %}

    {% if skills and skills|length %}
    <h2>Skills</h2>
    <div>
      {% for s in skills %}
        <strong>{{ s.name }}</strong>{% if s.keywords and s.keywords|length %}: {{ s.keywords|join(", ") }}{% endif %}{% if not loop.last %}; {% endif %}
      {% endfor %}
    </div>
    {% endif %}

    {% if education and education|length %}
    <h2>Education</h2>
    {% for e in education %}
      <div><strong>{{ e.degree }}</strong>{% if e.institution %}, {{ e.institution }}{% endif %}{% if e.start or e.end %} ({{ e.start }} – {{ e.end }}){% endif %}</div>
    {% endfor %}
    {% endif %}
  </body>
  </html>


